type Post {
  id: ID! @id
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  published: Boolean! @default(value: false)
  title: String!
  content: String!
  author: User!
}

type User {
  id: ID! @id
  email: String! @unique
  password: String!
  name: String!
  posts: [Post!]!
}

type Page {
  id: ID! @id
  name: String!
  path: String! @unique
  createdAt: DateTime! @createdAt
  updatedAt: DateTime! @updatedAt
  description: String
  sections: [Section!]!
}

type Section { 
  id: ID! @id
  type: String!
  image: String
  content: String
}